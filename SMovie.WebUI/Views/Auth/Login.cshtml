@using Microsoft.AspNetCore.Http.Extensions
@model SMovie.Domain.Models.UserDTO

<main class="main-content">

    <div class="vh-100"
         style="background: url('/home/images/pages/01.html'); background-size: cover; background-repeat: no-repeat; position: relative;min-height:500px">
        <div class="container">
            <div class="row justify-content-center align-items-center height-self-center vh-100">
                <div class="col-lg-5 col-md-12 align-self-center">
                    <div class="user-login-card bg-body">
                        <div class="text-center">
                            <!--Logo -->
                            <div class="logo-default">
                                <a class="navbar-brand text-primary" asp-action="index" asp-controller="Home">
                                    <img class="img-fluid logo" src="~/home/images/logo.html" loading="lazy"
                                         alt="streamit" />
                                </a>
                            </div>
                            <div class="logo-hotstar">
                                <a class="navbar-brand text-primary" asp-action="index" asp-controller="Home">
                                    <img class="img-fluid logo" src="~/home/images/logo-hotstar.html" loading="lazy"
                                         alt="streamit" />
                                </a>
                            </div>
                            <div class="logo-prime">
                                <a class="navbar-brand text-primary" asp-action="index" asp-controller="Home">
                                    <img class="img-fluid logo" src="~/home/images/logo-prime.html" loading="lazy"
                                         alt="streamit" />
                                </a>
                            </div>
                            <div class="logo-hulu">
                                <a class="navbar-brand text-primary" asp-action="index" asp-controller="Home">
                                    <img class="img-fluid logo" src="~/home/images/logo-hulu.html" loading="lazy"
                                         alt="streamit" />
                                </a>
                            </div>
                        </div>
                        <form method="post" asp-controller="Login" asp-action="Login">
                            <div class="mb-3">
                                <label class="text-white fw-500 mb-2">Username or Email Address</label>
                                <input type="text" class="form-control rounded-0" required="" asp-for="UserName">
                            </div>
                            <div class="mb-3">
                                <label class="text-white fw-500 mb-2">Password</label>
                                <input type="password" class="form-control rounded-0" required="" asp-for="Password">
                            </div>
                            <div class="text-end mb-3 d-flex justify-content-between">
                                <a href="reset-password.html" class="text-primary fw-semibold fst-italic">
                                    Forgot Password
                                </a>
                                <label class="list-group-item d-flex align-items-center mb-3 font-size-14 text-white fw-500">
                                    <input class="form-check-input m-0 me-2" type="checkbox">Remember Me
                                </label>
                            </div>
                            
                            <div class="full-button">
                                <div class="iq-button">
                                    <button class="btn text-uppercase position-relative">
                                        <span class="button-text">log in</span>
                                        <i class="fa-solid fa-play"></i>
                                    </button>
                                </div>
                            </div>
                        </form>
                        <p class="my-4 text-center fw-500 text-white">
                            New to Streamit <a asp-controller="Register" asp-action="Index"
                                                class="text-primary ms-1">Register</a>
                        </p>
                        <div class="seperator d-flex justify-content-center align-items-center">
                            <span class="line"></span>
                            <span class="mx-2">OR</span>
                            <span class="line"></span>
                        </div>
                        <ul class="p-0 pt-4 m-0 list-unstyled widget_social_media text-center">
                            <li class="">
                                <a id="google-login-btn" class="position-relative">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24"
                                         viewBox="0 0 24 24" fill="none">
